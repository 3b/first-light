(in-package #:virality-examples)

;;; Prefabs

(v:define-prefab "geometric-volumes" (:library examples)
  (("camera" :copy "/cameras/perspective"))
  (("plane" :copy "/mesh")
   (c/xform:transform :rotate/velocity (o:make-velocity (v3:vec 1) o:pi)
                      :scale 6f0))
  (("cube" :copy "/mesh")
   (c/xform:transform :translate (v3:vec 0f0 30f0 0f0)
                      :rotate/velocity (o:make-velocity (v3:vec 1) o:pi)
                      :scale 6f0)
   (c/smesh:static-mesh :asset '(:virality/mesh "cube.glb")))
  (("sphere" :copy "/mesh")
   (c/xform:transform :translate (v3:vec 0f0 -30f0 0f0)
                      :rotate/velocity (o:make-velocity (v3:vec 1) o:pi)
                      :scale 6f0)
   (c/smesh:static-mesh :asset '(:virality/mesh "sphere.glb")))
  (("torus" :copy "/mesh")
   (c/xform:transform :translate (v3:vec 30f0 0f0 0f0)
                      :rotate/velocity (o:make-velocity (v3:vec 1) o:pi)
                      :scale 6f0)
   (c/smesh:static-mesh :asset '(:virality/mesh "torus.glb")))
  (("cone" :copy "/mesh")
   (c/xform:transform :translate (v3:vec -30f0 0f0 0f0)
                      :rotate/velocity (o:make-velocity (v3:vec 1) o:pi)
                      :scale 6f0)
   (c/smesh:static-mesh :asset '(:virality/mesh "cone.glb"))
   (c/render:render :material 'x/mat:unlit-texture-decal-bright)))
